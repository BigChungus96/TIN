<%- include('../../fragments/header.ejs')%>
        <main>
            <h2><%=__('car.list.pageTitle')%></h2>
            <table class="table-list">
                <thead>
                    <tr>
                        <th><%=__('car.fields.carBrand')%></th>
                        <th><%=__('car.fields.carModel')%></th>
                        <th><%=__('car.fields.year')%></th>
                        <%if(loggedUser){%>
                        <th><%=__('list.actions.title')%></th>
                        <%}%>
                    </tr>
                </thead>
                <tbody>
                <%for(let car of cars){%>
                    <tr>
                        <td><%=car.carBrand%></td>
                        <td><%=car.carModel%></td>
                        <td><%=car.year%></td>
                        <%if(loggedUser){%>
                        <td>
                            <ul class="list-actions">
                                <li><a href="/car/details/<%=car._id%>" class="list-actions-button-details"><%=__('list.actions.details')%></a></li>
                                <li><a href="/car/edit/<%=car._id%>" class="list-actions-button-edit"><%=__('list.actions.edit')%></a></li>
                                <li><a href="/car/delete/<%=car._id%>"class="list-actions-button-delete"><%=__('list.actions.delete')%></a></li>
                            </ul>
                        </td>
                        <%}%>
                    </tr>
                <%}%>
                </tbody>
            </table>
            <%if(loggedUser){%>
            <p><a href="car/add" class="button-add"><%=__('car.list.addNew')%></a></p>
            <%}%>
        </main>
<%- include('../../fragments/footer.ejs')%>