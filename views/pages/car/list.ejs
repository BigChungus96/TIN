<%- include('../../fragments/header.ejs')%>
        <main>
            <h2>Car List</h2>
            <table class="table-list">
                <thead>
                    <tr>
                        <th>Brand</th>
                        <th>Model</th>
                        <th>Year</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                <%for(let car of cars){%>
                    <tr>
                        <td><%=car.carBrand%></td>
                        <td><%=car.carModel%></td>
                        <td><%=car.year%></td>
                        <td>
                            <ul class="list-actions">
                                <li><a href="/car/details/<%=car._id%>" class="list-actions-button-details">Details</a></li>
                                <li><a href="/car/edit/<%=car._id%>" class="list-actions-button-edit">Edit</a></li>
                                <li><a href="/car/delete/<%=car._id%>"class="list-actions-button-delete">Delete</a></li>
                            </ul>
                        </td>
                    </tr>
                <%}%>
                </tbody>
            </table>
            <p><a href="car/add" class="button-add">Add new car</a></p>
        </main>
<%- include('../../fragments/footer.ejs')%>